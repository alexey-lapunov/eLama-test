.s-header
  display block
  padding 51px 0 38px
  box-shadow 0px 2px 3px rgba(0, 37, 67, 0.12)
  &__inner
    display flex
    justify-content space-between
    align-items center
@media screen and (max-width: 1260px)
  .s-header
    &__logo
      font-size 24px
@media screen and (max-width: 780px)
  .m-header-menu
    display none
  .s-header
    padding 20px 0 15px

