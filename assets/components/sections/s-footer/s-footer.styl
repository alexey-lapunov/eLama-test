.s-footer
  padding 50px 0 25px
  &__inner
    display flex
    justify-content space-between
    margin-bottom 25px
  &__logo
    font-size 24px
  &-email
    &__link
      position relative
      font-size 16px
      color #002543
  &-social
    text-align center
    &__wrap
      display flex
      justify-content space-between
      margin-bottom 7px
    &__btn
      &--faceboock
        margin-left 10px
        background-color #3B5998
  &__wrap
    display flex
    justify-content center
    &-phone
      max-width 570px
      width 100%
      display flex
      justify-content space-between
  &__description
    position relative
    font-size 14px
    color #002543
@media screen and (max-width: 1260px)
  .s-footer
    &__inner
      flex-direction column
      align-items center
    &__logo
      margin-bottom 40px
    &__wrap-phone
      margin-bottom 30px
    &-email
      margin-bottom 30px
    &-social
      margin-bottom 30px
@media screen and (max-width: 780px)
  .s-footer
    &__wrap-phone
      flex-direction column
      align-items center
      text-align center
    &__phone-number
      margin-bottom 30px
