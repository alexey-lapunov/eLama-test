.wrapper
  min-height 100%
  min-width 320px
  display: flex
  flex-direction column
  align-items stretch
  position: relative
  overflow hidden
  &__content
    flex-grow 1

.container
  max-width 1300px
  min-width 320px
  margin 0 auto
  padding 0 20px
  font-family Muller

img[data-object-fit="contain"]
  object-fit: contain

img[data-object-fit="cover"]
  object-fit: cover

.line
  &:before
    content ''
    position absolute
    bottom -2px
    left 0
    width 100%
    height 2px
    background-color rgba(235, 52, 65, 0.5)


